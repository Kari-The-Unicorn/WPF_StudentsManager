<UserControl x:Class="WPF_StudentsManager.Controls.StudentDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_StudentsManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Student detail -->
    <StackPanel>
        <TextBox Text="First Name" Margin="10" x:Name="txtFirstName"
                       TextChanged="TextBox_TextChanged"/>
        <TextBox Text="Last Name" Margin="10" x:Name="txtLastName"
                       TextChanged="TextBox_TextChanged"/>
        <CheckBox Content="Is active" Margin="10" x:Name="chkIsActive"
                      Checked="CheckBoxIsActive_Checked"
                      Unchecked="CheckBoxIsActive_Checked"/>
    </StackPanel>
</UserControl>
